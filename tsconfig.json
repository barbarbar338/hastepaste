{
	"compilerOptions": {
		"target": "es5",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": false,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"typeRoots": ["node_modules/@types", "src/@types", "src/node-env.d.ts"]
	},
	"exclude": [
		"dist",
		"node_modules",
		"**/__mocks__",
		"**/*.spec.ts",
		"**/*.spec.tsx",
		"**/*.test.ts",
		"**/*.test.tsx",
		"**/~~**/*",
		"**/**~~/*"
	],
	"include": ["src/**/*.ts", "src/**/*.tsx"]
}
